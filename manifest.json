{
    "manifest_version": 2,
    "name": "PferdeBlocker",
    "version": "1.0",
    "description": "Blocker f√ºr Pferde",

    "icons": {
        "16": "icons/16x16.png",
        "19": "icons/19x19.png",
        "38": "icons/38x38.png",
        "48": "icons/48x48.png",
        "128":"icons/128x128.png"
    },

    "permissions":[
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["src/content.js"],
            "run_at": "document_start"
        }
    ],

    "browser_action": {
        "default_icon": "icons/38x38.png",
        "default_title": "PferdeBlocker",
        "default_popup": "popup/popup.html"
      }
}